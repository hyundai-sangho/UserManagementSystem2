<!-- form handling -->
<form action="/api/users" method="POST" id="add_user">
	<div class="new__user">
		<div class="form-group">
			<label for="name" class="text-light">이름</label>
			<input type="hidden" name="id" value="" />
			<input type="text" name="name" value="" placeholder="홍길동" />
		</div>
		<div class="form-group">
			<label for="Email" class="text-light">이메일</label>
			<input type="text" name="email" value="" placeholder="example@naver.com" />
		</div>
		<div class="form-group">
			<label for="gender" class="text-light">성별</label>
			<div class="radio inline">
				<input type="radio" name="gender" value="남자" id="gender1" />
				<label for="gender1" class="radio-label">남자</label>
			</div>
			<div class="radio inline">
				<input type="radio" name="gender" value="여자" id="gender2" />
				<label for="gender2" class="radio-label">여자</label>
			</div>
		</div>

		<div class="form-group">
			<label for="status" class="text-light">상태</label>
			<div class="radio inline">
				<input type="radio" name="status" value="공개" id="status1" />
				<label for="status1" class="radio-label">공개</label>
			</div>
			<div class="radio inline">
				<input type="radio" name="status" value="비공개" id="status2" />
				<label for="status2" class="radio-label">비공개</label>
			</div>
		</div>

		<div class="form-group">
			<button type="submit" class="btn text-dark update">저장</button>
		</div>
	</div>
</form>
